<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorBackground"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="7dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_poster"
        android:paddingRight="7dp"
        android:text="Spider-Man: Far from Home"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/iv_poster"
        android:paddingRight="7dp"
        android:text="Snatched off the street and held for ransom, a bound and gagged woman uses her limited powers to derail her two masked abductors' carefully laid plans."
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_poster"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/tvdate"
        android:text="en"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdate"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/tvlang"
        android:text="2019-06-30"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvlang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdate"
        android:paddingLeft="7dp"
        android:text="Language :"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_poster"
        android:layout_alignParentLeft="true"
        android:paddingLeft="7dp"
        android:text="Release Date :"
        android:textColor="@color/colorWhite" />

</RelativeLayout>